


	 <a href="{{ cardUrl }}" class="products__link small-card">
	    <figure class="small-card__container">
	        <img src="{{cardImgPath}}" class="small-card__img">
	        <figcaption class="small-card__descr-wrap">
	            <h3 class="small-card__title">
	            	{{ cardTitle }}
	            </h3>
	            <span class="small-card__descr">
	            	{{ cardDescr }}
	            </span>
	            <span class="small-card__price">
	            	{{ cardPrice }}
	            </span>
	        </figcaption>
	    </figure>
	</a>
