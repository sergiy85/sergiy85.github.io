<a href="{{ cardUrl }}" class="products__link medium-card">
    <figure class="medium-card__container">
    	<img src="{{ cardImgPath }}" class="medium-card__img">

    	<figcaption class="medium-card__descr-wrap">
    		<h3 class="medium-card__title">
   				 {{ cardTitle }}
			</h3>
			<span class="medium-card__descr">
    			{{ cardDescr }}
			</span>
			<span class="medium-card__price">
    			{{ cardPrice }}
			</span>
		</figcaption>
	</figure>
</a>